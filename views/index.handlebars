<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <img src="/public/img/burger.jpg" alt="Burger Pic" class="img-thumbnail">
</div>

<div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Eat-Da Burger</h1>
</div>


<div class="row">
    <div class="container text-center">
        <div class="card-deck mb-3 text-center col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4>Burgers to Eat</h4>
                    <ul>
                        {{#each burger_name}}
                        {{#unless devoured}}
                        {{> burgers/burger-button }}
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="container text-center">
        <div class="card-deck mb-3 text-center col-md-4">
            <div class="card mb-4 shadow-sm">
                <div class="card-header">
                    <h4>Burgers Eaten</h4>
                    <ul>
                        {{#each burger_name}}
                        {{#if devoured}}
                        {{> burgers/burger-button }}
                        {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
    </div>
</div>


<form>
    <div class="row">
        <div class="container form-group col-md-4">
            <label for="burgerInput">Enter a burger you want to eat</label>
            <textarea class="form-control" rows="1"></textarea>
            <button type="submit" id="submit" class="btn btn-primary text-center mt-2">Submit</button>
        </div>
    </div>

</form>

 